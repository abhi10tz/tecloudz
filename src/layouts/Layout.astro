---
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Cutting-edge tech stories that matter. Privacy-first news, tutorials, and guides." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <ClientRouter />
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      /* --- 1. Define Variables (Light Mode Default) --- */
      :root {
        --bg-color: #ffffff;
        --text-main: #111111;
        --text-muted: #666666;
        --border-color: #eaeaea;
        --accent: #000000;
        --hover-bg: #f5f5f5;
      }

      /* --- 2. Dark Mode Override --- */
      @media (prefers-color-scheme: dark) {
        :root {
          --bg-color: #111111;
          --text-main: #e0e0e0;
          --text-muted: #a0a0a0;
          --border-color: #333333;
          --accent: #ffffff;
          --hover-bg: #222222;
        }
      }

      /* --- 3. Global Styles --- */
      html { 
        font-family: system-ui, sans-serif; 
        background: var(--bg-color); 
        color: var(--text-main); 
      }
      body { margin: 0; padding: 0; display: flex; flex-direction: column; min-height: 100vh; }
      a { text-decoration: none; color: inherit; }
      a:hover { color: var(--accent); }

      /* --- 4. Global Footer Styles --- */
      .minimal-footer {
        margin-top: auto;      /* Pushes footer to the bottom */
        margin-left: auto;     /* CENTERS it horizontally */
        margin-right: auto;    /* CENTERS it horizontally */
        width: 100%;
        max-width: 720px;
        
        padding: 2rem 1.5rem;  /* Adds side padding to match your Main content */
        text-align: center;
        border-top: 1px solid var(--border-color);
        font-size: 0.8rem;
        color: var(--text-muted);
      }

      .footer-links {
        margin-bottom: 1rem;
        display: flex;
        justify-content: center;
        gap: 1.5rem;
      }
      
      .footer-links a {
        color: var(--text-muted);
        font-weight: 500;
      }
      
      .footer-links a:hover {
        color: var(--accent);
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <slot />

    <footer class="minimal-footer">
      <div class="footer-links">
        <a href="/privacy">Privacy Policy</a>
        <a href="/terms">Terms</a> <a href="/about">About</a>
        <a href="/posts">Posts</a>
      </div>
      <p>&copy; 2025 tecloudz</p>
    </footer>
  </body>
</html>