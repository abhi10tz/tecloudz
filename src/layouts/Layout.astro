---
import { ClientRouter } from 'astro:transitions';
import type { ImageMetadata } from 'astro';
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: ImageMetadata | string;
  activeNav?: 'home' | 'posts' | 'about';
}

const { title, description = "Cutting-edge tech stories that matter. Privacy-first news, tutorials, and guides.", image, activeNav } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const resolveImageURL = (img: ImageMetadata | string | undefined) => {
  if (!img) return new URL('/favicon.svg', Astro.site);
  if (typeof img === 'string') return new URL(img, Astro.site); // Handle string paths
  return new URL(img.src, Astro.site); // Handle ImageMetadata
};

const socialImageURL = resolveImageURL(image);
---

<!doctype html>
<html lang="en">
  <head>
    <ClientRouter />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />
  </head>
  <body>
    <div class="site-wrapper">
      <Navbar active={activeNav} />
      
      <main>
        <slot />
      </main>

      <footer class="minimal-footer">
        <div class="footer-links">
          <a href="/privacy">Privacy Policy</a>
          <a href="/terms">Terms</a> <a href="/about">About</a>
          <a href="/posts">Posts</a>
        </div>
        <p>&copy; 2026 tecloudz</p>
      </footer>
    </div>
  </body>
</html>

<style>
  .site-wrapper {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
    width: 100%;
  }
</style>