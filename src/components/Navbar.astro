---
interface Props {
  active?: 'home' | 'posts' | 'about';
}

const { active } = Astro.props;
---

<header class="navbar">
  <div class="logo"><a href="/">tecloudz.</a></div>
  <nav>
    <a href="/" class={active === 'home' ? 'active' : ''}>Home</a>
    <a href="/posts" class={active === 'posts' ? 'active' : ''}>Posts</a>
    <a href="/about" class={active === 'about' ? 'active' : ''}>About</a>
  </nav>
</header>

<style>
  .navbar {
    width: 100%;
    padding: 2rem 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .logo a {
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--text-main);
    text-decoration: none;
  }

  nav a {
    margin-left: 1.5rem;
    font-size: 0.9rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  nav a:hover {
    color: var(--accent);
    text-decoration: underline;
  }

  nav a.active {
    color: var(--text-main);
    font-weight: 600;
  }

  @media (max-width: 600px) {
    .navbar {
      padding-bottom: 2rem;
    }
  }
</style>