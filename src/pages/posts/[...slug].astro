---
import { getCollection, render } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import ShareButtons from '../../components/ShareButtons.astro'; // Import is still here
import { formatDate } from '../../utils/date';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);


---

<Layout title={post.data.title} description={post.data.description} image={post.data.image}>
  
  <main class="post-container">
    <article>
      <header class="post-header">
        <div class="meta">
          <time>{formatDate(post.data.date, { month: 'long' })}</time>
          <span>/ {post.data.category}</span>
        </div>
        <h1>{post.data.title}</h1>
        <p class="author">By {post.data.author}</p>
        
        {post.data.image && (
          <div class="featured-image">
            <Image 
              src={post.data.image} 
              alt={post.data.title} 
              loading="eager"
              fetchpriority="high"
            />
          </div>
        )}
      </header>

      <ShareButtons title={post.data.title} />
      
      <div class="post-content">
        <Content />
      </div>

    </article>
  </main>

  
</Layout>

<style>
  /* --- UPDATED STYLES --- */
  
  /* Removed the bottom border from header so it flows into share buttons better */
  .post-header { 
    margin-bottom: 1rem; /* Reduced margin */
    padding-bottom: 1rem; 
  }

  .post-header h1 { font-size: 2.2rem; line-height: 1.2; margin: 0.5rem 0 1rem 0; font-weight: 800; letter-spacing: -0.02em; }
  
  .meta { font-family: monospace; color: var(--text-muted); font-size: 0.9rem; }
  .author { color: var(--text-muted); font-style: italic; }

  .featured-image { margin-top: 2rem; margin-bottom: 1rem; }
  .featured-image img { width: 100%; height: auto; border-radius: 8px; }

  /* Markdown Content Styling */
  .post-content { 
    line-height: 1.7; 
    color: var(--text-main); 
    font-size: 1.1rem;
    margin-top: 2rem; /* Add spacing between Share Buttons and Text */
  }

  /* Headings */
  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3) { 
    color: var(--text-main);
    font-weight: 700;
    margin-top: 2rem;
  }

  .post-content :global(p) { margin-bottom: 1.5rem; }
  .post-content :global(ul), 
  .post-content :global(ol) { 
    margin-bottom: 1.5rem; 
    padding-left: 1.5rem; 
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  /* Handle nested lists */
  .post-content :global(li > ul),
  .post-content :global(li > ol) {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }
  
  .post-content :global(blockquote) {
    border-left: 4px solid var(--accent);
    padding-left: 1rem;
    margin-left: 0;
    margin-bottom: 1.5rem;
    font-style: italic;
    color: var(--text-muted);
  }

  .post-content :global(hr) {
    border: none;
    border-top: 1px solid var(--border-color);
    margin: 2rem 0;
  }

  .post-content :global(code) {
    background-color: var(--hover-bg);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: monospace;
  }

  .post-content :global(pre) {
    background-color: var(--hover-bg);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }
  
  .post-content :global(pre) :global(code) {
    background-color: transparent;
    padding: 0;
  }

  .post-content :global(a) { text-decoration: underline; color: var(--accent); }
  
  /* Images */
  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }
</style>